.marriageStatus{
  margin-top: 118rpx;
  border-top: 2rpx solid #dfdfdf;
  border-bottom: 2rpx solid #dfdfdf;
  text-indent: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  font-size: 36rpx;
  color: #333;
  font-family: PingFangSC;
  font-weight: regular;
  position: relative;
}
.picker{
  margin-top: 0;
  border-top: none;
}

.marriageStatus .isMarriage{
  font-size: 32rpx;
}
.marriageStatus .triangle{
  width: 0;height: 0;
  border: 18rpx solid #999;
  border-right-color: transparent;
  border-left-color: transparent;
  border-bottom-color: transparent;
  position: absolute;
  top: 42rpx;
  left: 292rpx;
}
.number .triangle{
  left: 364rpx;
}

.type .triangle{
  left: 314rpx;
}
.info-container{
  position: fixed;
